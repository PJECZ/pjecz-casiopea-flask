{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Editar Rama {{ web_rama.clave }}{% endblock %}

{% block topbar_actions %}
    {{ topbar.page('Editar Rama ' + web_rama.clave) }}
{% endblock %}

{% block content %}
    {% call f.card() %}
        {% set form_kwargs = {'web_rama_id': web_rama.id} %}
        {% call f.form_tag('web_ramas.edit', fid='web_rama_form', **form_kwargs) %}
            {% call f.form_group(form.clave) %}{% endcall %}
            {% call f.form_group(form.descripcion) %}{% endcall %}
            {% call f.form_group(form.titulo) %}{% endcall %}
            {% call f.form_group(form.unidad_compartida) %}{% endcall %}
            {% call f.form_group(form.directorio) %}{% endcall %}
            {% call f.form_group(form.esta_archivado) %}{% endcall %}
            {% call f.form_group(form.guardar) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}
